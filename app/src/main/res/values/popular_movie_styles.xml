<?xml version="1.0" encoding="utf-8"?>
<resources>

  <!-- GridView Style -->
  <style name="GridLayout">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:numColumns">auto_fit</item>
    <item name="android:verticalSpacing">1dp</item>
    <item name="android:horizontalSpacing">1dp</item>
    <item name="android:padding">1dp</item>
    <item name="android:stretchMode">columnWidth</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="MovieDetail">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="MovieTitle" parent="MovieDetail">
    <item name="android:gravity">left</item>
    <item name="android:textSize">24sp</item>
    <item name="android:textColor">@android:color/black</item>
    <item name="android:textStyle">italic|bold</item>
    <item name="android:capitalize">characters</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginRight">5dp</item>
  </style>

  <style name="MovieReleaseDate" parent="MovieDetail">
    <item name="android:textSize">20sp</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="android:layout_marginTop">10dp</item>
    <item name="android:gravity">left</item>
    <item name="android:textColor">@android:color/black</item>
  </style>

  <style name="MovieUserRating" parent="MovieDetail">
    <item name="android:layout_marginRight">2dp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textColor">@android:color/black</item>
  </style>

  <style name="MoviePoster">
    <item name="android:layout_width">@dimen/poster_width</item>
    <item name="android:layout_height">@dimen/poster_height</item>
    <item name="android:paddingTop">10dp</item>
  </style>

  <style name="MovieUserRatingLayout">
    <item name="android:orientation">horizontal</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">left</item>
    <item name="android:layout_marginBottom">10dp</item>
  </style>

  <style name="MovieOverview" parent="MovieDetail">
    <item name="android:textSize">16sp</item>
    <item name="android:gravity">fill_horizontal</item>
    <item name="android:paddingLeft">20dp</item>
    <item name="android:paddingRight">10dp</item>
    <item name="android:layout_marginTop">10dp</item>
    <item name="android:layout_marginBottom">10dp</item>
  </style>

  <style name="TrailerImage">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:src">@drawable/ic_play_circle_filled_black_48dp</item>
  </style>

  <style name="TrailerText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">20sp</item>
    <item name="android:layout_marginLeft">10dp</item>
    <item name="android:gravity">center_vertical</item>
  </style>

  <style name="UserName">
    <item name="android:textColor">@android:color/black</item>
    <item name="android:paddingStart">20dp</item>
    <item name="android:paddingEnd">20dp</item>
    <item name="android:textSize">18sp</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="UserReview">
    <item name="android:paddingBottom">10dp</item>
    <item name="android:paddingStart">20dp</item>
    <item name="android:paddingEnd">20dp</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/dark_gray</item>
  </style>

</resources>
